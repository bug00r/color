_CFLAGS:=$(CFLAGS)
CFLAGS:=$(_CFLAGS)
_LDFLAGS:=$(LDFLAGS)
LDFLAGS:=$(_LDFLAGS)

ARFLAGS?=rcs
PATHSEP?=/
BUILDROOT?=build

BUILDDIR?=$(BUILDROOT)$(PATHSEP)$(CC)
BUILDPATH?=$(BUILDDIR)$(PATHSEP)

ifndef PREFIX
	INSTALL_ROOT=$(BUILDPATH)
else
	INSTALL_ROOT=$(PREFIX)$(PATHSEP)
	ifeq ($(INSTALL_ROOT),/)
	INSTALL_ROOT=$(BUILDPATH)
	endif
endif

ifdef DEBUG
	CFLAGS+=-ggdb
	ifeq ($(DEBUG),)
	CFLAGS+=-Ddebug=1
	else 
	CFLAGS+=-Ddebug=$(DEBUG)
	endif
endif

ifeq ($(M32),1)
	CFLAGS+=-m32
	BIT_SUFFIX+=32
endif

CFLAGS+=-std=c11 -Wpedantic -pedantic-errors -Wall -Wextra
#-ggdb
#-pg for profiling 

CFLAGS+=-I/c/dev/include/

NAME=color

SRC=$(NAME).c

LIBNAME=lib$(NAME).a
LIB=$(BUILDPATH)$(LIBNAME)
OBJS=$(BUILDPATH)$(NAME).o

TESTSRC=test_$(NAME).c
TESTBIN=$(BUILDPATH)test_$(NAME).exe
TESTLIB=-l$(NAME)
TESTLIBDIR=-L$(BUILDDIR)

LDFLAGS+=$(TESTLIBDIR) $(TESTLIB)

COLOR_T_TESTSRC=test_$(NAME)_t.c
COLOR_T_TESTBIN=$(BUILDPATH)test_$(NAME)_t.exe
COLOR_T_TESTLIB=-l$(NAME) 
COLOR_T_TESTLIBDIR=-L$(BUILDDIR) 

all: createdir $(LIB)

$(LIB): $(OBJS)
	$(AR) $(ARFLAGS) $@ $^

$(OBJS): $(NAME).h
	$(CC) $(CFLAGS) -c $(SRC) -o $@
	
$(TESTBIN): $(LIB)
	$(CC) $(CFLAGS) $(TESTSRC) -o $@ $(LDFLAGS)
	
$(COLOR_T_TESTBIN): $(LIB)
	$(CC) $(CFLAGS) $(COLOR_T_TESTSRC) -o $@ $(LDFLAGS)

.PHONY: clean test createdir

test: createdir $(TESTBIN) $(COLOR_T_TESTBIN)
	./$(COLOR_T_TESTBIN)
	./$(TESTBIN)

createdir:
	mkdir -p $(BUILDDIR)

clean:
	-rm -dr $(BUILDROOT)

install:
	mkdir -p $(INSTALL_ROOT)include
	mkdir -p $(INSTALL_ROOT)lib$(BIT_SUFFIX)
	cp ./$(NAME).h $(INSTALL_ROOT)include/$(NAME).h
	cp $(LIB) $(INSTALL_ROOT)lib$(BIT_SUFFIX)/$(LIBNAME)
